+1:
+	bl s3c64xx_pll_init
+	bl s3c64xx_sdram_init
+
+	/* check if we booted from nand or mmc*/
+	ldr	r1, =0x7E00F12C		/* reg  MEM_CFG_STAT*/
+	ldr	r0, [r1]
