+static int arm11plfevk_init(void)
+{
+	const uint32_t reg_val = readl(0x7E00F12C);
+
+	enum bootsource src = BOOTSOURCE_UNKNOWN;
+	switch (reg_val & 0xE0) {
+	case 0x80:
+		src = BOOTSOURCE_NAND;
+		break;
+	case 0x60:
+		src = BOOTSOURCE_MMC;
+		break;
+	default:
+		src = BOOTSOURCE_UNKNOWN;
+	}
+
+	bootsource_set(src);
+	bootsource_set_instance(0);
+
+	return 0;
+}
