+static int arm11plfevk_get_adc1(void)
+{
+	int v;
+	char tmp[10];
+
+	//delay  40000
+	writel(40000, 0x7e00b008);
+	//adc1 12bits 49 prescal
+	writel(0x14c49, 0x7e00b000);
+	//wait complete
+	udelay(10*1000); // 10ms ok
+	//read it
+	v = readl(0x7e00b00c) & 0xFFF;
+	//clear adc int
+	writel(1, 0x7e00b018);
+
+	sprintf(tmp,"%d",v);
+	setenv("adc1",tmp);
+	export("adc1");
+
+	return 0;
+}
