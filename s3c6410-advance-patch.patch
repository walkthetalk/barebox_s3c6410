+	and	r1, r0, r1		/*r1 = MEM_CFG_STAT & CFG_BOOT_LOC */
+	cmp	r1, #0x80
+	bne out
+	bl s3c64xx_nand_boot
+	b out
+#endif
+out:
+	/* args */
+	ldr r0, =S3C_SDRAM_BASE
+	ldr r1, =SZ_128M
+	ldr r2, =0
+	b barebox_arm_entry
